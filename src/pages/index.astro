    <meta name="viewport" content="width=device-width">
    <title>{title}</title>

        <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <link rel="stylesheet" href={Astro.resolve('../styles/global.scss')}>

    <style>
        header {
            display: flex;
            flex-direction: column;
            gap: 1em;
